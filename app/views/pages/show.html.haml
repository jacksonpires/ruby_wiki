- if @page.new_record?
  %p= link_to "Create page \"#{@page.title}\"", new_page_path(path: @page.title)
- else
  %p
    %b Title:
    = @page.title
  %p
    %b Body:
    = @page.body

  = link_to 'Edit', edit_page_path(@page)
  |
  = link_to 'Versions', page_versions_path(@page)
  |
  = link_to 'Back', pages_path
